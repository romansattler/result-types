# RCS1194: Implement exception constructors
dotnet_diagnostic.RCS1194.severity = none

# RMG012: Source member was not found for target member
dotnet_diagnostic.RMG012.severity = error

# CA2000: Dispose objects before losing scope
dotnet_diagnostic.CA2000.severity = error

# CA2016: Forward the CancellationToken parameter to methods that take one
dotnet_diagnostic.CA2016.severity = warning

# SYSLIB1006: Multiple logging methods cannot use the same event id within a class
dotnet_diagnostic.SYSLIB1006.severity = none

# CS1573: Parameter has no matching param tag in the XML comment (but other parameters do)
dotnet_diagnostic.CS1573.severity = none

# CS1591: Missing XML comment for publicly visible type or member
dotnet_diagnostic.CS1591.severity = none

# CA1707: Identifiers should not contain underscores
dotnet_diagnostic.CA1707.severity = none

# CA1711: Identifiers should not have incorrect suffix
dotnet_diagnostic.CA1711.severity = none

# CA1725: Parameter names should match base declaration
dotnet_diagnostic.CA1725.severity = none

# CA1822: Mark members as static
dotnet_diagnostic.CA1822.severity = none

# CS1998: Async method lacks 'await' operators and will run synchronously
dotnet_diagnostic.CS1998.severity = none

# IDE0052: Remove unread private members
dotnet_diagnostic.IDE0052.severity = warning

# ASP0018: Unused route parameter
dotnet_diagnostic.ASP0018.severity = warning

# IDE0058: Expression value is never used
dotnet_diagnostic.IDE0058.severity = none

# RMG020: Source member is not mapped to any target member
dotnet_diagnostic.RMG020.severity = suggestion
